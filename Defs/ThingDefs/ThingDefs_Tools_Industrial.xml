			<MeleeWeapon_DamageAmount>8</MeleeWeapon_DamageAmount>
			<MeleeWeapon_Cooldown>2</MeleeWeapon_Cooldown>
		</statBases>
		<equippedAngleOffset>0</equippedAngleOffset>
