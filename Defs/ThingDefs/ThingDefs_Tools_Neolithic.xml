<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Neolithic Tools -->
	<ThingDef ParentName="BaseToolNeolithic">
		<defName>RTFTJ_Neo_Pick</defName>
		<label>Stone Pick</label>
		<description>A pick for mining.</description>
		<graphicData>
			<texPath>things/items/tools/StonePick</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Autopistol</soundInteract>
		<statBases>
			<MarketValue>22</MarketValue>
			<Mass>3.25</Mass>
		</statBases>
		<equippedAngleOffset>0</equippedAngleOffset>
		<tools>
			<li>
				<label>point</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2</power>
				<cooldownTime>2.1</cooldownTime>
			</li>
		</tools>
		<equippedStatOffsets>
			<MiningSpeed>0.15</MiningSpeed>
			<MiningYield>0.15</MiningYield>
		</equippedStatOffsets>
	</ThingDef>

	<ThingDef ParentName="BaseToolNeolithic">
		<defName>RTFTJ_Neo_Shovel</defName>
		<label>Stone Shovel</label>
		<description>A shovel for growing.</description>
		<graphicData>
			<texPath>things/items/tools/StoneShovel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Autopistol</soundInteract>
		<statBases>
			<MarketValue>22</MarketValue>
			<Mass>3.25</Mass>
		</statBases>
		<equippedAngleOffset>0</equippedAngleOffset>
		<tools>
			<li>
				<label>point</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2</power>
				<cooldownTime>2.1</cooldownTime>
			</li>
		</tools>
		<equippedStatOffsets>
			<PlantWorkSpeed>0.15</PlantWorkSpeed>
			<PlantHarvestYield>0.15</PlantHarvestYield>
		</equippedStatOffsets>
	</ThingDef>

</Defs>
